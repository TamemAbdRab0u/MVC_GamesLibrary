@model MyGamesLibrary.ViewModel.ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "";
}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-image: url('/images/bg1.jpg');
        background-repeat: no-repeat;
        background-size: cover;
        font-family: Arial, sans-serif;
    }
    .container {
        background-color: #002736;
        padding: 50px;
        border-radius: 10px;
        box-shadow: 8px 8px 0px black;
        width: 300px;
        height: 400px;
        position: absolute;
        left: 37%;
        top: 13%;
    }
    .input-box {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: none;
        border-radius: 5px;
        box-shadow: 4px 4px 0px 2px black;
        font-size: 16px;
        background-color: #9dd6cf;
    }

    .btn {
        padding: 0.8em 1.8em;
        position: relative;
        overflow: hidden;
        background-color: #9dd6cf;
        text-align: center;
        text-transform: uppercase;
        font-size: 16px;
        transition: .3s;
        z-index: 1;
        font-family: inherit;
        color: #857575;
        border-radius: 5px;
        top: 35px;
        box-shadow: 4px 4px 0px 2px black;
        border: none;
        width: 40%;
    } 
    .btn:hover {
            color: #fffdfd;
            cursor: pointer;
    }
    a{
        position: relative;
        left: 60%;
        background: #9dd6cf;
        padding: 10px;
        padding-bottom: 13px;
        border-radius: 5px;
        text-decoration: none;
        color: #696565;
        font-family: cursive;
        font-weight: bold;
        box-shadow: 4px 4px 0px 2px black;
    }
    label{
        color:beige;
    }
</style>

<hr />
<div class="row">
    <div class="container">
        <form asp-action="SaveForgetPassword">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" placeholder="Enter User Name" class="input-box" />
                <span asp-validation-for="Name" class="text-danger" style="color: red"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" placeholder="Enter Password" class="input-box" />
                <span asp-validation-for="Password" class="text-danger" style="color: red"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" placeholder="Confirm Password" class="input-box" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger" style="color: red"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn" />
            </div>

            <div>
                <a asp-controller="Account" asp-action="Login">Back to Login</a>
            </div>
        </form>
    </div>
</div>




<script src="/lib/jquery/dist/jquery.min.js"></script>                 <!--This script is already used in the layout we are using-->
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

