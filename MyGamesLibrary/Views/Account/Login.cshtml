@model MyGamesLibrary.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "";
}

<style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('/images/bg1.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            font-family: Arial, sans-serif;
        }

        .container {
            background-color: #002736;
            padding: 50px;
            border-radius: 10px;
            box-shadow: 8px 8px 0px black;
            width: 300px;
            height: 400px;
        }

        h2 {
            color: beige;
            font-weight: bold;
            position: relative;
            top: -10%;
            font-size: 30px;
            font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }

        p {
            color: gray;
            position: relative;
            top: -10%;
        }
        .cont{
            position: relative;
            top: -10%;
            left: -1%;
        }
        .input-box {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
            box-shadow: 4px 4px 0px 2px black;
            font-size: 16px;
            background-color: #9dd6cf;
        }
        .input-box:focus-visible{
            outline: none;
        }

        .check{
            display: flex;
            flex-wrap: nowrap;
            position: relative;
            top: 10px;
        }
        .check label{
            color: beige;
        }
        .check .box:checked + label{
            color: #9dd6cf;
        }
        .link{
            position: relative;
            left: 65%;
            bottom: 9px;
        }
        .link a{
            color: beige;
        }
        .btn{
            padding: 0.8em 1.8em;
            position: relative;
            overflow: hidden;
            background-color: #9dd6cf;
            text-align: center;
            text-transform: uppercase;
            font-size: 16px;
            transition: .3s;
            z-index: 1;
            font-family: inherit;
            color: #857575;
            border-radius: 5px;
            top: -6%;
            left: -1%;
            box-shadow: 4px 4px 0px 2px black;
            border: none;
            width: 106%;
        }
        .btn::before {
        content: '';
        width: 0;
        height: 300%;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(0deg);
        background: #213f49;
        transition: .3s ease;
        display: block;
        z-index: -1;
        }       

        .btn:hover::before {
        width: 105%;
        }

        .btn:hover {
        color: #fffdfd;
        cursor: pointer;
        }

        .p{
            position: relative;
            left: 25%;
        }
        .register{
            position: relative;
            left: 39%;
        }
        .register a{
            text-decoration: none;
            color: beige;
            font-family: system-ui;
            font-weight: bold;  
            animation: colors 3s linear 0s infinite;
        }
        @@keyframes colors{
            0% {
            color: #bcebf4;
            }
            25% {
                color: #39f4dd;
            }
            50% {
                color: #002736;
            }
            75% {
                color: #39f4dd;
            }
            100% {
                color: #bcebf4;
            }
        }
    </style>

<body>
<form asp-action="SaveLogin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container">
        <h2>Welcome Back</h2>
        <p>PLease Login To Continue.</p>
        <div class="cont">
            <input asp-for="UserName" placeholder="Enter User Name" class="input-box">
            <input asp-for="Password" placeholder="Enter Password" class="input-box">

            <div class="check">
                <input class="box" asp-for="RememberMe" id="RememberMe">
                <label for="RememberMe" asp-for="RememberMe">Remember me</label>
            </div>
            <div class="link">
                <a asp-controller="Account" asp-action="ForgetPassword">forget password?</a>
            </div>
        </div>
        <button class="btn">Let`s go →</button>

        <div class="Signup">
            <p class="p">Dont Have Account?</p>
            <div class="register">
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </div>
    </div>
</form>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
